generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  engineType = "library"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"

}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid()) 
  email     String   @unique
  name      String?
  username  String?  @unique
  artistname String?  
  bio       String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  Track     Track[]
  orders    Order[]
}

model Product {
  id          String      @id @default(cuid())
  name        String
  price       Int      
  orders      OrderItem[]
}

model Order {
  id              String      @id @default(cuid())
  userId          String
  user            User        @relation(fields: [userId], references: [id])
  items           OrderItem[]
  totalAmount     Int
  currency        String      @default("usd")
  status          OrderStatus @default(PENDING)
  stripeSessionId String?     @unique 
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id              String  @id @default(cuid())
  orderId         String
  order           Order   @relation(fields: [orderId], references: [id])
  productId       String
  product         Product @relation(fields: [productId], references: [id])
  priceAtPurchase Int 
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Track {
  email       String?       
  folderHash  String?
  id          Int           @id @default(autoincrement())
  isVerified  String        @default("pending")
  title       String
  slug        String?       @unique
  diskNumber  Int?          @default(1)
  isExplicit  Boolean       @default(false)
  releaseDate DateTime?
  description String?
  lyrics      String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  promoCode   String?     
  txHash      String?       
  authorId    String?       
  Userid      String?
  userName    String?
  artistName  String?
  storagePath      String?     
  albumId     Int?
  Album       String?        
  artists     String? 
  Genre       String?     

  users User[]
}
