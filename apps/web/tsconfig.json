/* Based on https://github.com/tsconfig/bases/blob/501da2bcd640cf95c95805783e1012b992338f28/bases/node22.json */
{
  "extends": [
    "@repo/typescript-config/nextjs.json",
    "@repo/cms/typescript-config.json"
  ],
  "compilerOptions": {
    
"paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"],
      "@backend/*": ["./backend/*"],
      "@generated/*": ["./generated/*"],
      "@prisma/*": ["./prisma/*"],
      "@web/*": ["../web/*"],
      "@api/*": ["../web/app/[locale]/api/*"],


    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
    "scripts": {
    "postinstall": "npm prisma generate"
  }

}
